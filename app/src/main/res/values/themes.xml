<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Digiato" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Digiato" parent="Base.Theme.Digiato">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/Blue_cola</item>
        <item name="colorPrimaryContainer">@color/white</item>
        <item name="colorOnPrimaryContainer">@color/Blue_cola</item>
        <item name="colorOnSecondary">@color/Onyx</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorSurfaceContainer">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="Q">true</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="Q">true</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="colorContainer">@color/text_color</item>
        <item name="materialSwitchStyle">@style/Switch.Default</item>

    </style>
    <!--custom style-->
    <style name="LightProgress">
        <item name="android:text">@string/loading</item>
        <item name="android:textSize">@dimen/_16font_mdp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="light_color">@color/light_color</item>
    </style>
    <!--TextSize||fontBold-->
    <style name="TextAppearance_Bold">
        <item name="android:textSize">@dimen/_14font_mdp</item>
        <item name="fontPath">fonts/is_bold.ttf</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance_light">
        <item name="android:textSize">@dimen/_12font_mdp</item>
        <item name="fontPath">fonts/is_light.ttf</item>
        <item name="android:textStyle">normal</item>
    </style>
    <!--TextSize||fontBold Mobile-->
    <style name="TextAppearance_mobile_bold">
        <item name="android:textSize">@dimen/_10font_mdp</item>
        <item name="fontPath">fonts/is_mobile_bold.ttf</item>
        <item name="android:textStyle">normal</item>
    </style>
    <!--TextSize||Farsi-Digits-->
    <style name="TextAppearance_Farsi_Digits">
        <item name="android:textSize">@dimen/_10font_mdp</item>
        <item name="fontPath">fonts/tanha_fd.ttf</item>
        <item name="android:textStyle">normal</item>
    </style>
    <!--bottom navigation-->
    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorSurfaceContainer">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/white</item>
        <item name="itemRippleColor">@color/white</item>
        <item name="colorSurface">@color/white</item>
    </style>
    <!--Round ImageView-->
    <style name="ImageViewRound">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8%</item>
    </style>

    <style name="RoundImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12%</item>
    </style>

    <style name="Switch.Default" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="thumbIcon">@drawable/switch_icon</item>
        <item name="checkedIconSize">16dp</item>
        <item name="selectorSize">16dp</item>
        <item name="iconSize">16dp</item>
        <item name="drawableSize">16dp</item>
        <item name="itemIconSize">16dp</item>
        <item name="maxImageSize">16dp</item>
        <item name="thumbIconTint">@color/Blue_cola</item>
        <item name="trackDecorationTint">@color/white</item>

        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorPrimary">@color/Blue_cola</item>
        <item name="colorSurfaceVariant">@color/white</item>
    </style>
    <!--text style-->
    <style name="title_Style">
        <item name="android:textColor">@color/Blue_cola</item>
    </style>

    <style name="title_Style_setting">
        <item name="android:textColor">@color/Onyx</item>
    </style>

    <style name="sub_title_Style">
        <item name="android:textColor">@color/dark_gunmetal</item>
    </style>
    <!--category-->
    <style name="category_color_text">
        <item name="android:textColor">@color/Cool_gray</item>
    </style>

    <style name="author_color_text">
        <item name="android:textColor">@color/Cool_gray</item>
    </style>
    <!--icon tint logo-->
    <style name="logoTintStyle">
        <item name="tint">@color/Blue_cola</item>
    </style>

    <style name="iconTintStyle">
        <item name="tint">@color/text_color</item>
    </style>
    <style name="LoadingProgressbar">
        <item name="colorAccent">@color/Blue_cola</item>
    </style>
</resources>